<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg5"
    android:orientation="vertical"
    android:paddingTop="10sp"
    tools:context=".create_game.CreateGameActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/createGameHeader"
                    android:layout_width="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:autoSizeMaxTextSize="45sp"
                    android:autoSizeMinTextSize="18sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    android:text="@string/stw_rz_gr"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/profile"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/avatar_photo"
                    android:src="@drawable/sample_avatar_cropped"
                    app:maxImageSize="56dp"
                    app:tint="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createGameTextView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:text="@string/liczba_rund"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/roundNumSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createGameTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/liczba_kategorii"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/categoryNumSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createGameTextView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/kategorie"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/createGameRollButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/losuj"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <Button
                android:id="@+id/createGameConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="confirm"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="80dp"
                android:paddingVertical="15dp"
                android:text="@string/zatwierd" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
